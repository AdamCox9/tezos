(executable
 (name main)
 (libraries tezos-base
            tezos-micheline
            tezos-protocol-environment
            alcotest-lwt
            tezos_004_PsGn8G5U_test_helpers
            michelson_parser
            tezos-stdlib-unix
            bip39
            )
 (flags (:standard -w -9-32 -safe-string
                   -open Tezos_base__TzPervasives
                   -open Tezos_micheline
                   -open Tezos_004_PsGn8G5U_test_helpers
                   )))

(alias
 (name buildtest)
 (package tezos-protocol-004-PsGn8G5U)
 (deps main.exe))

; runs only the `Quick tests
(alias
 (name runtest_proto_004_PsGn8G5U)
 (package tezos-protocol-004-PsGn8G5U)
 (action (chdir %{workspace_root} (run %{exe:main.exe} -v -q))))

; runs both `Quick and `Slow tests
(alias
 (name runtest_slow)
 (package tezos-protocol-004-PsGn8G5U)
 (action (chdir %{workspace_root} (run %{exe:main.exe} -v))))

(alias
 (name runtest)
 (package tezos-protocol-004-PsGn8G5U)
 (deps (alias runtest_proto_004_PsGn8G5U)))

(alias
 (name runtest_indent)
 (deps (glob_files *.ml*))
 (action (run bash %{libexec:tezos-stdlib:test-ocp-indent.sh} %{deps})))
